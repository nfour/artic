
*
	-moz-box-sizing: border-box
	box-sizing: border-box

body
	background-color: #fafafa
	color: #777
	font-size: 14px
	font-family: Tahoma

a
	text-decoration: none
	color: #0D536A

	&:hover
		color: #1486AB

h1, h2, h3, h4
	color: #647B95
	font-family: Georgia
	font-weight: normal

h1
	font-size: 24px
	margin: 4px 0 10px

h2
	font-size: 18px
	margin: 4px 0 8px

h3
	font-size: 16px
	margin: 4px 0 6px

.wrapper
	margin: 0 auto
	width: 960px
	background-color: #fff
	padding: 0 10px
	border: 2px solid #f1f1f1
	border-top: 0
	border-radius: 0 0 4px 4px

.header
	border-bottom: 1px dotted #dfdfdf
	overflow: hidden

.logo
	padding: 0
	margin: 25px 12px 30px
	display: block

	a
		color: #637083


.core
	padding-top: 10px
	min-height: 400px

.content
	float: left
	width: 68%

.sidebar
	float: right
	width: 28%
	height: 100%
	min-height: 900px

.article
	margin: 10px 0 15px

	&:first-child
		margin-top: 0

	.meta
		padding: 0 10px 8px

		h2
			margin: 0

	.body
		padding: 8px 10px

.footer
	padding: 10px
	border-top: 1px dotted #dfdfdf
	text-align: center

